import { drizzle } from 'drizzle-orm/node-postgres';
import { Pool } from 'pg';
import * as schema from './schema.postgres';

// Verificar se DATABASE_URL est√° definida
if (!process.env.DATABASE_URL) {
  throw new Error('‚ùå DATABASE_URL n√£o est√° definida nas vari√°veis de ambiente');
}

console.log('üîå Configurando conex√£o PostgreSQL...');

// Criar pool de conex√£o
const pool = new Pool({
  connectionString: process.env.DATABASE_URL,
  max: 20,
  idleTimeoutMillis: 30000,
  connectionTimeoutMillis: 2000,
});

// Criar inst√¢ncia do drizzle
const db = drizzle(pool, { schema });

// Log de eventos do pool
pool.on('connect', () => {
  console.log('‚úÖ Nova conex√£o ao PostgreSQL estabelecida');
});

pool.on('error', (err) => {
  console.error('‚ùå Erro inesperado no cliente PostgreSQL:', err);
});

// Testar conex√£o inicial
(async () => {
  try {
    const client = await pool.connect();
    const result = await client.query('SELECT current_database() as database');
    const maskedUrl = process.env.DATABASE_URL?.replace(/\/\/.*:.*@/, '//***:***@');
    console.log(`‚úÖ Conectado ao PostgreSQL: ${maskedUrl}`);
    console.log(`üìä Database: ${result.rows[0].database}`);
    client.release();
  } catch (err) {
    console.error('‚ùå Erro ao testar conex√£o PostgreSQL:', err);
  }
})();

// Fun√ß√£o para fechar conex√£o
async function closeConnection() {
  try {
    await pool.end();
    console.log('‚úÖ Pool PostgreSQL encerrado');
  } catch (error) {
    console.error('‚ùå Erro ao fechar pool PostgreSQL:', error);
    throw error;
  }
}

// Exportar usando CommonJS para compatibilidade com require()
module.exports = {
  db,
  pool,
  closeConnection
};

// Tamb√©m exportar para ES6
export { db, pool, closeConnection };