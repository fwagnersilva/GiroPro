{
  "name": "giropro-backend",
  "version": "1.0.0",
  "description": "Backend da aplicação GiroPro para gestão financeira de motoristas de aplicativo.",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "db:generate": "tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx node_modules/drizzle-kit/bin.cjs push",
    "db:check": "tsx node_modules/drizzle-kit/bin.cjs check",
    "db:studio": "tsx node_modules/drizzle-kit/bin.cjs studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "camelcase-keys": "^9.1.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-stringify": "^6.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^2.1.0",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.3",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.1",
    "prettier": "^3.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
