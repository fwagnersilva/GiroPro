# Configuração de Teste
NODE_ENV=test
DB_TYPE=sqlite_memory
SQLITE_DB_PATH=":memory:"

# Configurações da API para testes
PORT=3001
HOST=0.0.0.0

# Segurança - JWT para testes
JWT_SECRET="test_jwt_secret_key_for_testing_only"
JWT_REFRESH_SECRET="test_refresh_secret_key_for_testing_only"
JWT_EXPIRES_IN="1h"

# Bcrypt com menos rounds para testes mais rápidos
BCRYPT_ROUNDS=4

# CORS para testes
ALLOWED_ORIGINS="http://localhost:3001"

# Logs para testes
LOG_LEVEL=error

# Desabilitar cache e backup durante testes
CACHE_ENABLED=false
BACKUP_ENABLED=false

# Rate limiting mais permissivo para testes
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis para testes (se necessário)
REDIS_URL=redis://localhost:6379/1
